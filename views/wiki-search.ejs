<%
const currentPage = 'wiki';
const title = query ? `Search: ${query}` : 'Search Wiki';
%>

<!-- Search Header -->
<section class="content-section animate-fade-in">
    <h1 class="section-title">Search Documentation</h1>
    

    
    <!-- Search Form -->
    <div class="wiki-search-form">
        <form action="/wiki/search" method="GET" class="search-form">
            <div class="search-input-group">
                <input type="text" name="q" value="<%= query %>" 
                       placeholder="Search documentation, guides, and API docs..." 
                       class="wiki-search-input-large" autofocus>

            </div>
            <div class="search-tips">
                <small class="text-muted">
                    <i class="fas fa-lightbulb"></i>
                    Tips: Use quotes for exact phrases, category:name for specific categories
                </small>
            </div>
        </form>
    </div>
</section>

<!-- Search Results -->
<% if (query) { %>
    <section class="content-section animate-fade-in">
        <div class="search-results-header">
            <h2 class="section-title">
                Search Results
                <span class="search-results-count">(<%= results.length %> found)</span>
            </h2>
            
            <% if (results.length > 0) { %>

            <% } %>
        </div>

        <% if (results.length === 0) { %>
            <!-- No Results -->
            <div class="search-no-results">
                <div class="text-center" style="padding: 60px 20px;">
                    <i class="fas fa-search" style="font-size: 4rem; color: var(--terminal-gray); margin-bottom: 20px; opacity: 0.5;"></i>
                    <h3 style="color: var(--terminal-gray); margin-bottom: 15px;">No results found</h3>
                    <p style="color: var(--terminal-gray); opacity: 0.8; margin-bottom: 30px;">
                        No documentation pages match your search for "<%= query %>".
                    </p>
                    
                    <div class="search-suggestions">
                        <h4 style="color: var(--terminal-green); margin-bottom: 15px;">Try these suggestions:</h4>
                        <ul style="list-style: none; padding: 0; color: var(--terminal-white);">
                            <li>• Check your spelling</li>
                            <li>• Use different keywords</li>
                            <li>• Try broader search terms</li>
                            <li>• Browse categories instead</li>
                        </ul>
                    </div>
                    
                    <div class="search-actions" style="margin-top: 30px;">
                        <a href="/wiki" class="btn-terminal me-3">
                            <i class="fas fa-home"></i> Browse Wiki
                        </a>
                        <a href="/wiki/search" class="btn-terminal btn-amber">
                            <i class="fas fa-search"></i> New Search
                        </a>
                    </div>
                </div>
            </div>
        <% } else { %>
            <!-- Search Results List -->
            <div class="search-results-list">
                <% results.forEach((result, index) => { %>
                    <div class="search-result-item">
                        <div class="search-result-header">
                            <h3 class="search-result-title">
                                <a href="/wiki/<%= result.slug %>">
                                    <i class="fas fa-file-alt"></i>
                                    <%= result.title %>
                                </a>
                            </h3>
                            <div class="search-result-meta">
                                <span class="search-result-category">
                                    <i class="fas fa-folder"></i>
                                    <%= result.category %>
                                </span>
                                <span class="search-result-modified">
                                    <i class="fas fa-clock"></i>
                                    <%= moment(result.lastModified).fromNow() %>
                                </span>
                            </div>
                        </div>
                        
                        <div class="search-result-description">
                            <%= result.description %>
                        </div>
                        
                        <% if (result.tags.length > 0) { %>
                            <div class="search-result-tags">
                                <% result.tags.slice(0, 3).forEach(tag => { %>
                                    <a href="/wiki/search?q=<%= tag %>" class="wiki-tag">#<%= tag %></a>
                                <% }) %>
                            </div>
                        <% } %>
                        
                        <div class="search-result-url">
                            <i class="fas fa-link"></i>
                            /wiki/<%= result.slug %>
                        </div>
                    </div>
                <% }) %>
            </div>
            
            <!-- Pagination (if needed for large result sets) -->
            <% if (results.length > 20) { %>
                <div class="search-pagination">
                    <div class="text-center">
                        <p class="search-pagination-info">
                            Showing top 20 results. Refine your search for more specific results.
                        </p>
                    </div>
                </div>
            <% } %>
        <% } %>
    </section>
<% } %>

<!-- Popular Searches / Categories -->
<section class="content-section animate-fade-in">
    <h2 class="section-title">
        <%= query ? 'Browse by Category' : 'Popular Categories' %>
    </h2>
    

    
    <div class="search-categories">
        <div class="row">
            <% 
            const categories = [...new Set(wikiPages.map(p => p.category))];
            categories.forEach(category => { 
                const categoryPages = wikiPages.filter(p => p.category === category);
            %>
                <div class="col-md-4 mb-3">
                    <a href="/wiki/search?q=category:<%= category %>" class="search-category-card">
                        <div class="search-category-icon">
                            <% if (category === 'security') { %>
                                <i class="fas fa-shield-alt"></i>
                            <% } else if (category === 'guides') { %>
                                <i class="fas fa-book"></i>
                            <% } else if (category === 'api') { %>
                                <i class="fas fa-code"></i>
                            <% } else if (category === 'services') { %>
                                <i class="fas fa-server"></i>
                            <% } else { %>
                                <i class="fas fa-folder"></i>
                            <% } %>
                        </div>
                        <div class="search-category-info">
                            <h4 class="search-category-name">
                                <%= category.charAt(0).toUpperCase() + category.slice(1) %>
                            </h4>
                            <div class="search-category-count">
                                <%= categoryPages.length %> pages
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
</section>



<style>
/* Additional search-specific styles */
.wiki-search-input-large {
    background: var(--terminal-bg);
    border: 2px solid var(--terminal-green);
    color: var(--terminal-white);
    padding: 15px 20px;
    font-family: inherit;
    border-radius: 6px;
    font-size: 1.1rem;
    width: 100%;
}

.search-input-group {
    display: flex;
    gap: 10px;
    margin-bottom: 10px;
}

.search-result-item {
    background: var(--terminal-bg);
    border: 1px solid var(--border-subtle);
    padding: 25px;
    margin-bottom: 20px;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.search-result-item:hover {
    border-color: var(--terminal-green);
    background: rgba(0, 255, 65, 0.02);
}

.search-result-title a {
    color: var(--terminal-green);
    text-decoration: none;
    font-size: 1.3rem;
    font-weight: 600;
}

.search-result-meta {
    display: flex;
    gap: 20px;
    margin: 10px 0;
    font-size: 0.9rem;
    color: var(--terminal-gray);
}

.search-category-card {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 20px;
    background: var(--terminal-bg);
    border: 2px solid var(--border-subtle);
    border-radius: 8px;
    text-decoration: none;
    color: var(--terminal-white);
    transition: all 0.3s ease;
}

.search-category-card:hover {
    border-color: var(--terminal-green);
    transform: translateY(-2px);
    color: var(--terminal-green);
}

.search-category-icon {
    font-size: 2rem;
    color: var(--terminal-green);
}
</style>