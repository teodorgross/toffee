    <script>
// Mobile Menu Functionality - Angepasst für den neuen Button-Inhalt
document.addEventListener('DOMContentLoaded', function() {
    // Create mobile menu toggle button (UNSICHTBAR)
    const mobileToggle = document.createElement('button');
    mobileToggle.className = 'mobile-menu-toggle';
    mobileToggle.style.display = 'none'; // MACHT DEN BUTTON UNSICHTBAR
    
    // Dynamischer Text basierend auf fediverseConfig
    const siteName = '<% if (typeof fediverseConfig !== "undefined" && fediverseConfig.sitename) { %><%= fediverseConfig.sitename %><% } else { %>Toffee<% } %>';
    
    mobileToggle.innerHTML = `<span style="flex: 0 0 auto;">☰</span><span style="flex: 1; text-align: center; font-weight: 600;">${siteName}</span>`;
    mobileToggle.setAttribute('aria-label', 'Toggle mobile menu');
    document.body.appendChild(mobileToggle);

    const sideNav = document.querySelector('.side-nav');

    // Toggle mobile menu (funktioniert weiterhin, aber Button ist unsichtbar)
    mobileToggle.addEventListener('click', function() {
        sideNav.classList.toggle('active');
        const isActive = sideNav.classList.contains('active');
        mobileToggle.innerHTML = isActive ?
            `<span style="flex: 0 0 auto;">✕</span><span style="flex: 1; text-align: center; font-weight: 600;">${siteName}</span>` :
            `<span style="flex: 0 0 auto;">☰</span><span style="flex: 1; text-align: center; font-weight: 600;">${siteName}</span>`;
    });
});

// Smooth scrolling for anchor links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            target.scrollIntoView({
                behavior: 'smooth'
            });
        }
    });
});
