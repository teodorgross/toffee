{
  "name": "blog-wiki-activitypub-server",
  "version": "1.0.0",
  "description": "Blog and wiki server with full ActivityPub/Fediverse integration",
  "main": "server.js",
  "scripts": {
    "start": "node index.js && npm run buil:deps",
    "dev": "nodemon index.js",
    "build:deps": "node scripts/build-deps.js",
    "postinstall": "npm run build:deps",
    "background": "npm run pm2:setup && npm run pm2:start",
    "pm2:setup": "npm run pm2:install && npm run pm2:config",
    "pm2:install": "node scripts/install-pm2.js",
    "pm2:config": "node scripts/setup-pm2.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop blog-wiki-activitypub",
    "pm2:restart": "pm2 restart blog-wiki-activitypub",
    "pm2:delete": "pm2 delete blog-wiki-activitypub",
    "pm2:logs": "pm2 logs blog-wiki-activitypub",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:startup": "pm2 startup",
    "pm2:save": "pm2 save",
    "pm2:resurrect": "pm2 resurrect",
    "pm2:flush": "pm2 flush",
    "pm2:fix": "node scripts/fix-pm2.js",
    "setup": "node scripts/setup.js",
    "deploy": "npm run setup && npm run build:deps && npm run background",
    "fix": "npm run pm2:fix && npm run pm2:start",
    "health": "curl -s http://localhost:3000/health | jq .",
    "test:activitypub": "curl -s http://localhost:3000/admin/activitypub | jq .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "blog",
    "wiki",
    "markdown",
    "express",
    "ejs",
    "activitypub",
    "fediverse",
    "mastodon",
    "social",
    "pm2",
    "bootstrap",
    "fontawesome"
  ],
  "author": "Teodor Gross",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "bootstrap": "^5.3.7",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.1.1",
    "helmet": "^7.0.0",
    "marked": "^5.1.1",
    "moment": "^2.29.4",
    "universalify": "^2.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "sass": "^1.69.5"
  },
  "optionalDependencies": {
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pm2": {
    "apps": [
      {
        "name": "blog-wiki-activitypub",
        "script": "server.js",
        "instances": 1,
        "exec_mode": "fork",
        "env": {
          "NODE_ENV": "production"
        },
        "error_file": "./logs/err.log",
        "out_file": "./logs/out.log",
        "log_file": "./logs/combined.log",
        "time": true
      }
    ]
  }
}
